{
    "extends": [
        "../../.eslintrc.json"
    ],
    "ignorePatterns": [
        "!**/*",
        "src/test-setup.ts"
    ],
    "overrides": [
        {
            "parserOptions": {
                "project": [
                    "packages/ngx-http-client/tsconfig.lib.json"
                ]
            },
            "files": [
                "src/**/*.ts"
            ],
            "rules": {
                "@angular-eslint/directive-selector": [
                    "error",
                    {
                        "type": "attribute",
                        "prefix": "app",
                        "style": "camelCase"
                    }
                ],
                "@angular-eslint/component-selector": [
                    "error",
                    {
                        "type": "element",
                        "prefix": "app",
                        "style": "kebab-case"
                    }
                ]
            },
            "extends": [
                "plugin:@nrwl/nx/angular",
                "plugin:@angular-eslint/template/process-inline-templates"
            ]
        },
        {
            "parserOptions": {
                "project": [
                    "packages/ngx-http-client/tsconfig.lib.json"
                ]
            },
            "files": [
                "src/**/*.html"
            ],
            "extends": [
                "plugin:@nrwl/nx/angular-template"
            ],
            "rules": {}
        }
    ]
}